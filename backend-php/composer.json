{
    "name": "conjunto-solucion/php-auth-api",
    "description": "Plantilla de API con autenticación y autorización",
    "type": "template",
    "license": "GPL V3",
    "minimum-stability": "dev",
    "scripts": {
        "start": "sudo php -S localhost:80 -t public"
    },
    "require": {
        "firebase/php-jwt": "^6.10",
        "vlucas/phpdotenv": "^5.6@dev"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src/core",
            "Controllers\\": "src/controllers",
            "Middleware\\": "src/middleware",
            "Models\\": "src/models",
            "Repositories\\": "src/repositories",
            "Services\\": "src/services"
        }
    }
}
